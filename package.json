{
  "name": "@figedi/svc",
  "version": "1.0.0",
  "description": "Yet another base lib for services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/figedi/svc.git",
  "author": "Felix Kaminski <kaminski.felix@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && mkdir -p dist",
    "build": "npm run clean && tsup",
    "specs": "mocha --exit --only --require esbuild-register './src/**/*.spec.ts'",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "test:workerd": "npm run build && wrangler dev test-worker-env.js",
    "test:bun": "npm run build && bun run test-worker-env.js",
    "test:edge-runtime": "npm run clean && bun build src/app/index.ts > dist/index.bun.mjs && node test-edge-runtime-env.mjs"
  },
 
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "optionalDependencies": {
    "@kubernetes/client-node": "1.0.0-rc2",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "edge-runtime": "^2.4.5",
    "tsup": "^7.1.0",
    "@figedi/sops": "^1.3.5",
    "@figedi/svc-config": "0.1.0",
    "@google-cloud/kms": "^3.6.0",
    "@kubernetes/client-node": "1.0.0-rc2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/node-fetch": "^2.6.2",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "chai": "^4.3.7",
    "commitlint": "^17.6.5",
    "esbuild": "^0.17.19",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "nock": "^13.3.1",
    "prettier": "^2.8.8",
    "sinon": "^15.1.0",
    "typescript": "^5.1.3",
    "ws": "^8.8.1",
    "wrangler": "^3.2.0"
  },
  "dependencies": {
    "@figedi/metering": "^1.3.1",
    "@figedi/typecop": "^1.3.0",
    "@types/lodash": "^4.14.195",
    "@types/semver": "^7.5.0",
    "signal-exit": "^4.0.2",
    "axios": "^1.4.0",
    "envalid": "^7.3.1",
    "fast-json-stable-stringify": "^2.1.0",
    "inversify": "^6.0.1",
    "lodash": "^4.17.21",
    "pino": "^8.14.1",
    "rxjs": "^7.8.1",
    "semver": "^7.5.1",
    "minimist": "^1.2.8",
    "minimist-options": "^4.1.0"
  }
}
